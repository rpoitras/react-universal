{
  "parser": "babel-eslint",
  "extends": [
    "standard",
    "standard-react"
  ],
  "plugins": [
    "babel"
  ],
  "env": {
    "browser": true
  },
  "globals": {
    "describe": false,
    "it": false,
    "expect": false
  },
  "rules": {
    "semi": [2, "never"],
    "max-len": [2, 120, 2],
    "generator-star-spacing": 0,
    "jsx-quotes": [2, "prefer-single"]
  }
}

// Want semicolons? After installing npm dependencies, change the
// semi rule from never to always, and then run npm run lint:fix
